---
type Props = {
  id?: string;
  class?: string;
  padding?: number;
};

const { id, class: className, padding = 4 } = Astro.props;

const paddingMap: Record<number, string> = {
  0: "p-0",
  1: "p-1",
  2: "p-2",
  3: "p-3",
  4: "p-4",
  5: "p-5",
  6: "p-6",
  8: "p-8",
  10: "p-10",
  12: "p-12",
};

const paddingClass = paddingMap[padding] ?? "p-4";
---

<section id={id} class:list={[paddingClass, "max-w-2xl mx-auto", className]}>
  <slot />
</section>
